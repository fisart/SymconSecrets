{
    "elements": [
        {
            "type": "Label",
            "caption": "Security Configuration"
        },
        {
            "type": "Select",
            "name": "OperationMode",
            "caption": "System Role",
            "options": [
                { "caption": "Slave (Receiver)", "value": 0 },
                { "caption": "Master (Sender)", "value": 1 }
            ],
            "onChange": "SEC_UpdateUI($id);"
        },
        {
            "type": "ValidationTextBox",
            "name": "KeyFilePath",
            "caption": "External Key File Path (e.g. /var/lib/symcon_keys/master.key)"
        },
        {
            "type": "PasswordTextBox",
            "name": "AuthToken",
            "caption": "Sync Token (Shared Secret between all systems)"
        },
        {
            "type": "Label",
            "caption": "________________________________________________________________________________"
        },
        {
            "type": "Label",
            "caption": "Master: Secret Management (Data entered here is encrypted and cleared upon saving)"
        },
        {
            "type": "TextEditor",
            "name": "InputJson",
            "caption": "Paste Secrets JSON Here",
            "rows": 15
        },
        {
            "type": "Button",
            "caption": "Encrypt & Save Local",
            "onClick": "SEC_EncryptAndSave($id);"
        }
    ],
    "actions": [
        {
            "type": "Label",
            "caption": "Status:"
        },
        {
            "type": "Label",
            "name": "StatusLabel",
            "caption": "Idle"
        }
    ]
}